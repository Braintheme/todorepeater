{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": [],
    "watchAssets": true,
    "baseUrl": "src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@common/*": [
        "common/*"
      ]
    }
  }
}